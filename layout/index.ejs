<section class="posts">
  <% page.posts.each(function (post) { %>
    <article class="post">
      <div class="post-title">
        <h1><a class="post-title-link" href="<%- url_for(post.path) %>"><%= post.title %></a></h1>
      </div>
      <div class="post-meta">
        <span class="post-time"><%- date(post.date, "YYYY-MM-DD") %></span>
      <span>|<span>
      <% if (post.tags && post.tags.length){ %>
        <%- list_tags(post.tags, {
          show_count: false,
          class: 'article-tag',
          style: 'span',
          separator: ', '
        }) %>
      <% } %>
      </div>
      <div class="post-content">
        <%- post.excerpt %>
      </div>
      <div class="continue"><a class="btn" href="<%- url_for(post.path) %>">继续阅读</a></div>
    </article>
  <% }) %>
</section>
<%- partial('_partial/paginator') %>
