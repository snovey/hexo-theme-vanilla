<header class="header">
    <div class="header-wrap">
      <a class="nav-toggle" id="nav-trigger" href="javascript:;">
        <span></span>
        <span></span>
        <span></span>
      </a>
      <div class="site-meta">
        <img src="<%= theme.avatar %>" class="site-avatar">
        <div class="site-info">
          <div class="site-info-wrap">
            <a class="site-title" href="/"><%= config.title %></a>
            <span class="site-description"><%= config.description %></span>
          </div>
        </div>
      </div>
      <nav class="menu">
        <div class="menu-wrap">
          <div class="menu-info">
            <img class="site-avatar" src="<%= theme.avatar %>">
            <a class="site-title" href="/"><%= config.title %></a>
            <span class="site-description"><%= config.description %></span>
          </div>
          <ul class="menu-items">
            <% for (name in theme.menu) { %>
              <li class="menu-item">
                <a class="menu-item-link" href="<%- url_for(theme.menu[name]) %>">
                  <span class="menu-item-text"><%- __('menu.' + name) %></span>
                </a>
              </li>
            <% } %>
          </ul>
        <div>
      </nav>
    </div>
  </header>