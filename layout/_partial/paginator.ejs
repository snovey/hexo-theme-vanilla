<% if (page.prev || page.next) { %>
  <nav class="page-nav">
       <% if (page.prev) { %>
       <a class="page-prev" href="<%- url_for(page.prev_link) %>" title="<%= page.prev.title %>">
        &lt;
        <!-- <span>
          <% if (page.prev.title) { %>
            <%= page.prev.title %>
          <% } else { %>
            (no title)
          <% } %>
        </span> -->
      </a>
      <% } %>
      <div class="page-number"><%= page.current %> / <%= Math.ceil(site.posts.length / config.per_page) %></div>
      <% if (page.next) { %>
        <a class="page-next" href="<%- url_for(page.next_link) %>"  title="<%= page.next.title %>">
         &gt;
         <!-- <span>
           <% if (page.next.title) { %>
             <%= page.next.title %>
            <% } else { %>
              (no title)
            <% } %>
        </span> -->
        </a>
      <% } %>
  </nav>
<% } %>