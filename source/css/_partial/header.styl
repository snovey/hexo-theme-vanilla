.header {
  background-color: GRAY-9
  .header-inner {
    margin: auto
    max-width: 960px
    height: 60px
    line-height: 60px
    display: flex
    align-items: center
    justify-content: space-between
    .blog-title .logo {
      color: GRAY-3;
      font-size: 1.5em;
      font-family: "Comic Sans MS",cursive, LiSu, sans-serif;
      text-decoration: none;
    }
    .navbar {
      margin: 0;
      padding: 0;
      .menu-item-link {
        display: inline-block;
        width: 5rem;
        text-align: center;
        color: GRAY-4;
        text-decoration: none;
        &:hover {
          background-color: GRAY-7;
        }
      }
    }
  }
}

@media screen and (max-width: 768px) {
  header {
    .header-inner {
      .blog-title {
        margin: auto;
      }
      .navbar {
        display: none;
      }
    }
  }
}
