@import "nib"
@import "normalize.css"
@import "_variables"
html {
  font-size: 62.5%;
  background: #f6f6f6;
  min-height: 100%
  height: 100%;
}
body {
  color: #24292e;
  width:100%;
  font-size: 2rem;
  line-height: 4rem;
  position: relative;
}
.main {
  width: 80%;
  min-height: calc(100vh - 144px);
  max-width: 960px;
  margin: 0 auto;
  padding-bottom: 60px;
}
blockquote {
  color: #666;
  margin: 0;
  background-color: #f0f0f0;
  padding: 3px 1em;
  border-left: 6px solid #b4b4b4;
}
img {
    max-height: 500px;
    max-width: 500px;
    display: block;
    margin: 0 auto;
}
@import "_partial/header";
@import "_partial/footer";
@import "_partial/post";
@import "_partial/archive";
@import "_partial/highlight";
@import "_partial/tags";
