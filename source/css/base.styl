GRAY-0 = #f8f9fa
GRAY-1 = #f1f3f5
GRAY-2 = #e9ecef
GRAY-3 = #dee2e6
GRAY-4 = #ced4da
GRAY-5 = #adb5bd
GRAY-6 = #868e96
GRAY-7 = #495057
GRAY-8 = #343a40
GRAY-9 = #212529
section {
  min-height: calc(100vh - 120px - 6rem - 4px) /* 120px 是上线栏， 6rem 是 line-height+margin*2， 4px 是 border*2*/
}
main {
  width: 95%;
  max-width: 960px;
  min-height: calc(100vh - 120px);
  margin: 0 auto;
}
blockquote {
  color: GRAY-7;
  background-color: GRAY-1;
  padding: 1em;
  margin: 0;
  margin-bottom: 1.2em;
  border-left: 6px solid GRAY-3;
}
img {
  max-height: 500px;
  max-width: 70%;
  display: block;
  margin: 0 auto;
}
code {
  background-color: GRAY-0;
  padding: .1em .6em;
  border-radius: 3px;
}
kbd {
  -moz-border-radius:3px;
  -moz-box-shadow:0 1px 0 rgba(0,0,0,0.2),0 0 0 2px #fff inset;
  -webkit-border-radius:3px;
  -webkit-box-shadow:0 1px 0 rgba(0,0,0,0.2),0 0 0 2px #fff inset;
  background-color:GRAY-1;
  border:1px solid GRAY-3;
  border-radius:3px;
  box-shadow:0 1px 0 rgba(0,0,0,0.2),0 0 0 2px #fff inset;
  color:#333;
  display:inline-block;
  font-size:11px;
  line-height:1.4;
  margin:0 .1em;
  padding:.1em .6em;
  text-shadow:0 1px 0 #fff;
}
/*滚动条整体部分*/
body::-webkit-scrollbar{
  width: 7px;
  height: 7px;
  border-radius: 4px;
  background-color: #f0f0f0;
}
/*滚动条两端的箭头*/
body::-webkit-scrollbar-button{
  display: none;
}
/*经测试好像并不能控制什么*/
body::-webkit-scroll-track{
  display: none;
}
/*滚动条内侧部分 去掉*/
body::-webkit-scrollbar-track-piece {
  display: none;
}
/*滚动条中可以拖动的那部分*/
body::-webkit-scrollbar-thumb{
  background-color: GRAY-4;
  border-radius: 4px;
}
/*变角部分*/
body::-webkit-scrollbar-corner {
  display: none;
}
body::-webkit-resizer{
  display: none;
}