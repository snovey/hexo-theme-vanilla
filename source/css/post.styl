.post-detail {
  .article-tag-link {
    margin: 0 6px
    padding: 2px 0
  }
  .post-content {
    padding: 1em 0
  }
  .post-title,
  .post-meta {
    text-align: center
  }
  h2:hover:after,
  h3:hover:after {
    content: " Â¶"
    margin-right: .5em
    color: COLOR-7
  }
  .toc-title {
    display: block
    margin-bottom: .5em
    padding-bottom: .5em
    border-bottom: 1px solid COLOR-3
  }
  .toc-article {
    float: right
    margin-top: 1.5em
    margin-left: 1em
    padding: 1em
    border: 1px solid COLOR-7
    ol {
      list-style: none
    }
    .toc-link {
      border: none
      &:hover {
        border: none
      }
    }
  }
  .toc-article>ol {
    margin: 0
  }
}
  a.top {
    // @keyframes slide {
    //   from { margin-top: 28px }
    //   to { margin-top: 14px }
    // }
    position: fixed
    right: 2rem
    bottom: 0
    display: block
    width: 40px
    height: 40px
    border-bottom: none
    border-radius: 3px
    text-align: center
    background-color: COLOR-7
    opacity: 0
    transition: bottom .3s ease-in-out, opacity .3s ease-in-out
    &:hover {
      border-bottom: none
    }
    &:after {
      content: ''
      display: inline-block
      margin-top: 14px
      width: 14px
      height: 14px
      border-top: 4px solid COLOR-3
      border-right: 4px solid COLOR-3
      transform: rotate(-45deg)
    }
    // &:hover:after {
    //   animation: 1s slide ease-in-out
    // }
  }
  a.toggle {
    bottom: 99px
    opacity: 1
  }

@media screen and (max-width: 768px) {
  .post-detail {
    .toc-article {
      float: none
      margin: 0
    }
  }
}